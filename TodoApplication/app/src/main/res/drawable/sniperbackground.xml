<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="@android:color/darker_gray" /> <!-- Border color -->
        </shape>
    </item>

    <!-- Dropdown Arrow Layer -->
    <item
        android:drawable="@drawable/baseline_arrow_drop_down_24"
        android:gravity="end|center_vertical" /> <!-- Position the arrow to the end -->
</layer-list>